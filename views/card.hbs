

    <!-- Section Card with added products-->

    <section class="card">
        {{#if  itemsObj.length}}
        <div class="cart-items-container">
            <div class="card-items">
                {{#each itemsObj}}
                    <div class="cart-item">
                        <button data-id="{{this._id}}" class="deleteButtonCard fas fa-times"></button>      
                        <img src="{{this.image}}" alt="">
                        <div class="content">
                            <h3>{{this.type}}</h3>
                            <div class="price">$ {{this.price}}</div>
                        </div>
                        <div class="card-item_amount">
                        {{this.amount}}
                        </div>
                    </div>
                {{/each}}
            </div>
            <div class="totalLine"></div>
            <div class="totalPrice">Total Price: {{totalPrice}} $</div>

            <form action="/orders" method="POST">
                <button type="submit" class="btn btn-checkout">checkout now</button>
            </form>
        </div>
        {{else}}
        <h1 class="title-messagee">Your card is still empty. Don't loose your chance today and order now our tasty and powerful coffee which wiil wake you up, even if you are dead</h1>
        {{/if}}
    </section>
    
